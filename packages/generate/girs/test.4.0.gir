<?xml version="1.0"?>
<repository version="1.2" xmlns="http://www.gtk.org/introspection/core/1.0"
  xmlns:c="http://www.gtk.org/introspection/c/1.0"
  xmlns:glib="http://www.gtk.org/introspection/glib/1.0">
  <namespace name="Gtk" version="4.0" shared-library="libgtk-4.so">
    <class name="SimpleWidget" parent="Gtk.Widget" c:symbol-prefix="simple_widget"
      c:type="SimpleWidget" glib:type-name="SimpleWidget" glib:get-type="simple_widget_get_type">
      <method name="new" c:identifier="simple_widget_new">
        <return-value transfer-ownership="full">
          <type name="SimpleWidget" c:type="SimpleWidget*" />
        </return-value>
      </method>

      <property name="label" writable="1" readable="1" transfer-ownership="none">
        <type name="gchar" c:type="const gchar*" />
      </property>

      <signal name="button_clicked" when="last">
        <return-value transfer-ownership="none">
          <type name="void" />
        </return-value>
      </signal>
    </class>
  </namespace>
</repository>